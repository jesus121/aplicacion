<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMorado"
        app:title="Game Detail"
        app:titleTextColor="@color/colorBlanco"
        >

    </android.support.v7.widget.Toolbar>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        >
        <ImageView

            android:id="@+id/fondoActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/susanoo"
            android:scaleType="centerInside"
            android:foregroundGravity="top"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/smitelogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/smite_logo"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/InfoSmite"
            android:layout_below="@+id/fondoActivity"
            android:textColor="@color/colordark"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_below="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paginaOfficial"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>



</LinearLayout>