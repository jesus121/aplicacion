<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        >
        <ImageView
            android:id="@+id/fondosmite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/susanoo"
            android:scaleType="centerInside"
            android:foregroundGravity="top"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/smitelogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/smite_logo"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/InfoSmite"
            android:layout_below="@+id/fondosmite"
            android:textColor="@color/colordark"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/website_button"
            android:layout_below="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paginaOfficial"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="UrlClick"

            />
    </RelativeLayout>



</LinearLayout>